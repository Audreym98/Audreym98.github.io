{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A box plot example showing aggregate statistics for penguin body mass.",
  "width": 200,
  "height": 150,
  "padding": 5,

  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },

  "signals": [
    { "name": "plotWidth", "value": 60 },
    { "name": "height", "update": "(plotWidth + 10) * 3"}
  ],

  "data": [
    {
      "name": "alu",
      "url": "data/alu_type_conf.json"
    }
  ],

  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {"data": "alu", "field": "source_type"}
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width", "round": true,
      "domain": {"data": "alu", "field": "conf"},
      "domainMin": 0,
      "zero": false, "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "alu", "field": "source_type"},
      "range": {"scheme": "category10"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "xscale", "zindex": 1, "title": "Confidence"},
    {"orient": "left", "scale": "layout", "tickCount": 5, "zindex": 1, "title": "Source Alu Type"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "alu",
          "name": "type",
          "groupby": "source_type"
        }
      },

      "encode": {
        "enter": {
          "yc": {"scale": "layout", "field": "source_type", "band": 0.5},
          "height": {"signal": "plotWidth"},
          "width": {"signal": "width"}
        }
      },

      "data": [
        {
          "name": "summary",
          "source": "type",
          "transform": [
            {
              "type": "aggregate",
              "fields": ["conf", "conf", "conf", "conf", "conf"],
              "ops": ["min", "q1", "median", "q3", "max"],
              "as": ["min", "q1", "median", "q3", "max"]
            }
          ]
        }
      ],

      "marks": [
        {
          "type": "rect",
          "from": {"data": "summary"},
          "encode": {
            "enter": {
              "fill": {"value": "black"},
              "height": {"value": 1}
            },
            "update": {
              "yc": {"signal": "plotWidth / 2", "offset": -0.5},
              "x": {"scale": "xscale", "field": "min"},
              "x2": {"scale": "xscale", "field": "max"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "summary"},
          "encode": {
            "enter": {
              "fill": {"scale": "color", "field": {"parent": "source_type"}},
              "cornerRadius": {"value": 4}
            },
            "update": {
              "yc": {"signal": "plotWidth / 2"},
              "height": {"signal": "plotWidth / 2"},
              "x": {"scale": "xscale", "field": "q1"},
              "x2": {"scale": "xscale", "field": "q3"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "summary"},
          "encode": {
            "enter": {
              "fill": {"value": "white"},
              "width": {"value": 2}
            },
            "update": {
              "yc": {"signal": "plotWidth / 2"},
              "height": {"signal": "plotWidth / 2"},
              "x": {"scale": "xscale", "field": "median"}
            }
          }
        }
      ]
    }
  ]
}